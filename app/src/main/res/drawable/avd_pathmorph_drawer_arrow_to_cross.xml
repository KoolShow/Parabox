<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/vd_pathmorph_drawer_arrow_line">

  <target android:name="crossPath">
    <aapt:attr name="android:animation">
      <objectAnimator
          android:duration="@integer/crosstick_duration"
          android:interpolator="@android:interpolator/fast_out_slow_in"
          android:propertyName="pathData"
          android:valueFrom="@string/path_arrow_line"
          android:valueTo="@string/path_cross_line"
          android:valueType="pathType"/>
    </aapt:attr>
  </target>

  <target android:name="crossTickGroup">
    <aapt:attr name="android:animation">
      <objectAnimator
          android:duration="@integer/crosstick_duration"
          android:interpolator="@android:interpolator/fast_out_slow_in"
          android:propertyName="rotation"
          android:valueFrom="0"
          android:valueTo="135"/>
    </aapt:attr>
  </target>

</animated-vector>